{
	"name": "orchestrator-hybrid",
	"version": "0.1.0",
	"description": "AI agent orchestrator combining Ralph loop with GitHub Issue integration",
	"type": "module",
	"main": "src/index.ts",
	"bin": {
		"orch": "src/cli.ts"
	},
	"scripts": {
		"dev": "bun run src/cli.ts",
		"start": "bun run src/cli.ts",
		"test": "bun test",
		"lint": "biome check src/",
		"format": "biome format --write src/",
		"typecheck": "bun x tsc --noEmit",
		"build": "bun build src/cli.ts --outdir dist --target bun",
		"build:binary": "bun build src/cli.ts --compile --outfile orch",
		"build:binary:linux": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile orch-linux",
		"build:binary:macos": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile orch-macos",
		"build:binary:windows": "bun build src/cli.ts --compile --target=bun-windows-x64 --outfile orch.exe",
		"generate:schema": "bun run scripts/generate-schema.ts"
	},
	"dependencies": {
		"@inquirer/prompts": "^7.0.0",
		"chalk": "^5.3.0",
		"commander": "^12.0.0",
		"proper-lockfile": "^4.1.2",
		"yaml": "^2.4.0",
		"zod": "^3.23.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"typescript": "^5.6.0",
		"zod-to-json-schema": "^3.25.1"
	}
}
